<?xml version="1.0"?>
<launch>
  <arg name="world_name" default="racecar" />
  <arg name="gui" default="true" />
  <arg name="run_camera" default="false" />
  <arg name="rviz_file" default="racecar_gazebo.rviz" />

  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find car_like_gazebo)/worlds/$(arg world_name).world" />
    <arg name="gui" value="$(arg gui)" />
  </include>

  <!-- urdf xml robot description loaded on the Parameter Server, converting the xacro into a proper urdf file-->
  <param name="robot_description" command="$(find xacro)/xacro '$(find car_like_gazebo)/urdf/racecar.xacro'" />

  <!-- link odom to base_link  -->
  <!-- <node pkg="tf" type="static_transform_publisher" name="odom_to_base_link_br" args="0 0 0 0 0 0 1 odom base_link 50" /> -->

  <!-- push robot_description to factory and spawn robot in gazebo -->
  <node name="racecar_spawn" pkg="gazebo_ros" type="spawn_model" output="screen" args="-urdf -param robot_description -model racecar -z 0.05" />

  <!-- ros_control racecar launch file -->
  <include file="$(find car_like_gazebo)/launch/racecar_control.launch" ns="/" />

  <!-- Spawn the MUXs -->
  <!-- <arg name="racecar_version" default="racecar-v2" /> -->
  <!-- <include file="$(find racecar)/launch/mux.launch" ns="vesc" /> -->

  <!-- node for cmd_vel from twist_teleop_keyboard -->
  <node pkg="car_like_gazebo" name="cmd_vel_to_ackermann_drive" type="cmd_vel_to_ackermann_drive.py" output="screen" />

  <!-- Allow for Gazebo to broadcast odom -->
  <node pkg="car_like_gazebo" name="gazebo_odometry_node" type="gazebo_odometry.py"/>

  <!-- Publish "better odom" topic that is normally generated by the particle filter -->
  <node pkg="topic_tools" name="better_odom" type="relay" args="/vesc/odom /pf/pose/odom" />

  <!--launch rviz-->
  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find car_like_gazebo)/rviz/$(arg rviz_file)" />

</launch>
